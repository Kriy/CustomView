<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lemon.customview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TheoryActivity"
            android:label="理论知识"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DepthMapViewActivity"
            android:label="深度图"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TimeLineMarkerViewActivity"
            android:label="时间线"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MarqueeViewActivity"
            android:label="跑马灯"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SlantedTextViewActivity"
            android:label="倾斜textview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.KeyboardActivity"
            android:label="自定义数字键盘"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.VerifyCodeViewActivity"
            android:label="验证码输入框"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FoldTextViewActivity"
            android:label="折叠textview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ExpandableTextViewActivity"
            android:label="加强版折叠TextView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ShowInRecyclerViewActivity"
            android:label="加强版折叠TextView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RoundImageViewActivity"
            android:label="圆角ImageView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ShapeImageViewActivity"
            android:label="改版圆角ImageView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Roll3DViewActivity"
            android:label="3D View"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MeiHeartViewActivity"
            android:label="直播间送爱心"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TextPathViewActivity"
            android:label="路径"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LinePathActivity"
            android:label="线条路径"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WebViewActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>